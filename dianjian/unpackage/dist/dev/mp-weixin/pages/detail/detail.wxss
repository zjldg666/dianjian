
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: white;
}
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}
.title {
  font-size: 24px;
  margin-bottom: 20px;
  color: black;
}
.inspection-point {
  width: 100%;
  padding: 20px;
  background-color: white;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
  border-radius: 10px;
  text-align: center;
  color: #fff;
}
.inspection-name {
  font-size: 20px;
  margin-bottom: 20px;
  color: black;
}
.button {
  padding: 10px 20px;
  background-color: #007aff;
  color: white;
  border: 1px solid #ccc;
  border-radius: 5px;
  cursor: pointer;
}
.button:active {
  background-color: #005bb5;
}
/* 扫码动画 */
.scanner {
  position: relative;
  width: 300px;
  height: 300px;
  border: 2px solid #007aff;
  margin: 0 auto;
  margin-bottom: 40rpx;
  overflow: hidden;
  background-color: black;
}
.scanner-animation {
  position: absolute;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, transparent, rgba(0, 122, 255, 0.5), transparent);
  animation: scan 2s infinite;
}
@keyframes scan {
0% {
    transform: translateY(-100%);
}
100% {
    transform: translateY(100%);
}
}
