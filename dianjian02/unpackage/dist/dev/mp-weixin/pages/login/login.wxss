
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  background-color: #f5f5f5;
}
.login-box {
  width: 600rpx;
  padding: 40rpx;
  background-color: #fff;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.1);
  border-radius: 20rpx;
}
.title {
  font-size: 48rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.picker {
  width: 95%;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  text-align: center;
}
.input {
  width: 95%;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
}
.button {
  width: 100%;
  padding: 20rpx;
  background-color: #007aff;
  color: #fff;
  text-align: center;
  border: none;
  border-radius: 10rpx;
  cursor: pointer;
}
.button:active {
  background-color: #005bb5;
}
