
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: white;
}
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}
.title {
  font-size: 48rpx;
  margin-bottom: 40rpx;
  color: #fff;
}

/* 添加 badge 样式 */
.button-with-badge {
  position: relative;
  display: inline-block;
}
.button-with-badge .badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: red;
  border-radius: 50%;
  color: white;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
}
