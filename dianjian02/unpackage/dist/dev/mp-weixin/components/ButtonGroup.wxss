  color: black;
  text-align: center;
  border-radius: 10px;
  cursor: pointer;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column; /* 确保内容垂直居中 */
  padding: 20rpx; /* 可以根据需要调整内边距 */
  line-height: 1.2; /* 调整行距 */
  position: relative; /* 添加相对定位以便 badge 定位 */
}
.ZujianButton.data-v-8e810d98:disabled {
  background-color: white;
  color: black;
  cursor: not-allowed;
}
.ZujianButton.data-v-8e810d98:active {
  background-color: #005bb5;
}

/* 添加 badge 样式 */
.ZujianButton .badge.data-v-8e810d98 {
  position: absolute;
  top: 15rpx;
  right: 15rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: red;
