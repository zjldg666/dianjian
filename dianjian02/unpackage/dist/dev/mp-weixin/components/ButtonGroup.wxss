.ZujianButton-item.data-v-8e810d98 {
  width: 32%;
  margin-bottom: 20rpx;
}

/* 组件按钮样式 */
.ZujianButton.data-v-8e810d98 {
  width: 100%;
  aspect-ratio: 1 / 1; /* 保持宽高比为 1:1 */
